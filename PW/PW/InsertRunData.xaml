        <Label x:Name="lbl_oRunNumber" Content="" HorizontalAlignment="Left" Margin="500,22,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" RenderTransformOrigin="0.412,0.526" Width="26" HorizontalContentAlignment="Right" FontSize="16" Height="31"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="40" Margin="514,151,0,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="98"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="40" Margin="514,276,0,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="98"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="40" Margin="514,401,0,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="98"/>
        <Label x:Name="lbl_oTeam1Player1" Content="" HorizontalAlignment="Left" Margin="25,51,0,0" Grid.Row="1" VerticalAlignment="Top" Width="410" FontSize="16" Height="31"/>
        <Label x:Name="lbl_oTeam1Player2" Content="" HorizontalAlignment="Left" Margin="25,82,0,0" Grid.Row="1" VerticalAlignment="Top" Width="410" FontSize="16" Height="31"/>
        <Label x:Name="lbl_oTeam2Player1" Content="" HorizontalAlignment="Left" Margin="668,51,0,0" Grid.Row="1" VerticalAlignment="Top" Width="426" FontSize="16" Height="31"/>
        <Label x:Name="lbl_oTeam2Player2" Content="" HorizontalAlignment="Left" Margin="668,82,0,0" Grid.Row="1" VerticalAlignment="Top" Width="426" FontSize="16" Height="31"/>
        <Label x:Name="lbl_sWinPointsTeam1" Content="Gewinn-Punkte: " HorizontalAlignment="Left" Margin="171,113,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="16" Height="31" Width="126"/>
        <Label x:Name="lbl_sWinPointsTeam2" Content="Gewinn-Punkte: " HorizontalAlignment="Left" Margin="760,115,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="16" Height="31" Width="126"/>
        <TextBox x:Name="tbx_iWinPointsTeam1" HorizontalAlignment="Left" Height="33" Margin="302,113,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="45" FontSize="20"/>
        <TextBox x:Name="tbx_iWinPointsTeam2" HorizontalAlignment="Left" Height="33" Margin="891,113,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="44" FontSize="16"/>
        <Label x:Name="lbl_sFirstGame" Content="1. Spiel" HorizontalAlignment="Left" Margin="514,156,0,0" Grid.Row="1" VerticalAlignment="Top" Width="98" HorizontalContentAlignment="Center" FontSize="16" Height="31"/>
        <Label x:Name="lbl_sSecondGame" Content="2. Spiel" HorizontalAlignment="Left" Margin="514,281,0,0" Grid.Row="1" VerticalAlignment="Top" Width="98" HorizontalContentAlignment="Center" FontSize="16" Height="31"/>
        <Label x:Name="lbl_sThirdGame" Content="3. Spiel" HorizontalAlignment="Left" Margin="514,406,0,0" Grid.Row="1" VerticalAlignment="Top" Width="98" HorizontalContentAlignment="Center" FontSize="16" Height="31"/>
        <TextBox x:Name="tbx_1GamePoints1Team" HorizontalAlignment="Left" Height="61" Margin="227,184,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="36" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="tbx_1GamePoints2Team" HorizontalAlignment="Left" Height="61" Margin="815,184,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="36" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
