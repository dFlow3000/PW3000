<Window x:Class="PW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW"
        mc:Ignorable="d"
        Loaded="MainWindow_Loaded"
        Title="Preiswattera 3000" Height="1000" Width="1400"
        ResizeMode="CanMinimize"
        WindowStyle="ThreeDBorderWindow">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF426BB2" Offset="0.513"/>
            <GradientStop Color="#FF265389" Offset="1"/>
            <GradientStop Color="#FF9FC2FF"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid HorizontalAlignment="Left" Height="969" VerticalAlignment="Top" Width="1390">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="1150"/>
        </Grid.ColumnDefinitions>
        <ContentControl x:Name="MainContent" Content="{Binding}" Grid.Column="1" Margin="0,0,10,0" >
            <ContentControl.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ContentControl.Background>
        </ContentControl>
        <DockPanel x:Name="ActionMenue" Grid.Column="0" Visibility="Visible">
            <StackPanel>
                <Button x:Name="btn_GoToAddTeam" Content="Team anlegen" HorizontalAlignment="Left" Width="245" Height="193.8" IsEnabled="true" Click="btn_GoToAddTeam_Click" FontSize="28" Foreground="WhiteSmoke" FontFamily="Arial" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FE636363"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="btn_GoToShowTeam" Content="Team anzeigen" HorizontalAlignment="Left" Width="245" Height="193.8" IsEnabled="true" Click="btn_GoToShowTeam_Click" FontSize="28" Foreground="WhiteSmoke" FontFamily="Arial" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FE636363"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="btn_GoToTnmtData" Content="Spiel erfassen" HorizontalAlignment="Left" Width="245" Height="194" IsEnabled="true" Click="btn_GoToTnmtData_Click" FontSize="28" Foreground="WhiteSmoke" FontFamily="Arial" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FE636363"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="btn_GoToEvaluation" Content="Rangliste" HorizontalAlignment="Left" Width="245" Height="193" IsEnabled="true" Click="btn_GoToEvaluation_Click" FontSize="28" Foreground="WhiteSmoke" FontFamily="Arial" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FE636363"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="btn_GoTournamentMenue" Content="Turnier Info" HorizontalAlignment="Left" Width="245" Height="194" IsEnabled="true" Click="btn_GoTournamentMenue_Click" FontSize="28" Foreground="WhiteSmoke" FontFamily="Arial" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FE636363"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
        </DockPanel>
        <Canvas x:Name="cnvs_PWHeader" Visibility="Hidden">
            <Label Content="P" FontSize="40" Height="52" Width="240" Canvas.Left="10" Canvas.Top="40" HorizontalContentAlignment="Center" FontFamily="Rockwell"/>
            <Label Content="R" FontSize="40" Height="52" Canvas.Top="92" Width="240" Canvas.Left="10" HorizontalContentAlignment="Center" FontFamily="Rockwell"/>
            <Label Content="E" FontSize="40" Height="52" Canvas.Top="144" Width="240" Canvas.Left="10" HorizontalContentAlignment="Center" FontFamily="Rockwell"/>
            <Label Content="I" FontSize="40" Height="52" Canvas.Top="196" Width="240" Canvas.Left="10" HorizontalContentAlignment="Center" FontFamily="Rockwell"/>
            <Label Content="S" FontSize="40" Height="52" Canvas.Top="248" Width="240" Canvas.Left="10" HorizontalContentAlignment="Center" FontFamily="Rockwell"/>
            <Label Content="W" FontSize="40" Height="52" Canvas.Left="10" Canvas.Top="300" Width="240" HorizontalContentAlignment="Center" FontFamily="Rockwell"/>
            <Label Content="A" FontSize="40" Height="52" Canvas.Left="10" Canvas.Top="352" Width="240" HorizontalContentAlignment="Center" FontFamily="Rockwell"/>
            <Label Content="T" FontSize="40" Height="52" Canvas.Left="10" Canvas.Top="404" Width="240" HorizontalContentAlignment="Center" FontFamily="Rockwell"/>
            <Label Content="T" FontSize="40" Height="52" Canvas.Top="456" Canvas.Left="10" Width="240" HorizontalContentAlignment="Center" FontFamily="Rockwell"/>
            <Label Content="E" FontSize="40" Height="52" Canvas.Top="508" Canvas.Left="10" Width="240" HorizontalContentAlignment="Center" FontFamily="Rockwell"/>
            <Label Content="R" FontSize="40" Height="52" Canvas.Left="10" Canvas.Top="560" Width="240" HorizontalContentAlignment="Center" FontFamily="Rockwell"/>
            <Label Content=" " FontSize="40" Height="52" Canvas.Left="10" Canvas.Top="664" Width="240" HorizontalContentAlignment="Center" FontFamily="Rockwell"/>
            <Label Content="3" FontSize="40" Height="52" Canvas.Left="10" Canvas.Top="716" Width="240" HorizontalContentAlignment="Center" FontFamily="Rockwell"/>
            <Label Content="0" FontSize="40" Height="52" Canvas.Left="10" Canvas.Top="820" Width="240" HorizontalContentAlignment="Center" FontFamily="Rockwell"/>
            <Label Content="0" FontSize="40" Height="52" Canvas.Left="10" Canvas.Top="768" Width="240" HorizontalContentAlignment="Center" FontFamily="Rockwell"/>
            <Label Content="0" FontSize="40" Height="52" Canvas.Left="10" Canvas.Top="872" Width="240" HorizontalContentAlignment="Center" FontFamily="Rockwell"/>
            <Label Content="A" FontSize="40" Height="52" Canvas.Left="10" Canvas.Top="612" Width="240" HorizontalContentAlignment="Center" FontFamily="Rockwell"/>
        </Canvas>
    </Grid>
</Window>
