<Window x:Class="PW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW"
        mc:Ignorable="d"
        Loaded="MainWindow_Loaded"
        Title="Preiswattera 3000" Height="1000" Width="1400"
        ResizeMode="CanMinimize"
        WindowStyle="ThreeDBorderWindow">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF426BB2" Offset="0.513"/>
            <GradientStop Color="#FF265389" Offset="1"/>
            <GradientStop Color="#FF9FC2FF"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid HorizontalAlignment="Left" Height="969" VerticalAlignment="Top" Width="1390">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="1150"/>
        </Grid.ColumnDefinitions>
        <ContentControl x:Name="MainContent" Content="{Binding}" Grid.Column="1" Margin="0,0,10,0" >
            <ContentControl.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ContentControl.Background>
        </ContentControl>
        <DockPanel x:Name="ActionMenue" Grid.Column="0" Visibility="Visible">
            <StackPanel>
                <Button x:Name="btn_GoTournamentMenue" Content="Tunier Info" HorizontalAlignment="Left" Width="245" Height="193.8" IsEnabled="true" Click="btn_GoTournamentMenue_Click" FontSize="20" Foreground="WhiteSmoke" FontFamily="Arial" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FE636363"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="btn_GoToAddTeam" Content="Team anlegen" HorizontalAlignment="Left" Width="245" Height="193.8" IsEnabled="true" Click="btn_GoToAddTeam_Click" FontSize="20" Foreground="WhiteSmoke" FontFamily="Arial" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FE636363"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="btn_GoToShowTeam" Content="Teams anzeigen" HorizontalAlignment="Left" Width="245" Height="193.8" IsEnabled="true" Click="btn_GoToShowTeam_Click" FontSize="20" Foreground="WhiteSmoke" FontFamily="Arial" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FE636363"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="btn_GoToTnmtData" Content="Spiele erfassen" HorizontalAlignment="Left" Width="245" Height="193.8" IsEnabled="true" Click="btn_GoToTnmtData_Click" FontSize="20" Foreground="WhiteSmoke" FontFamily="Arial" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FE636363"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button x:Name="btn_GoToEvaluation" Content="Rangliste" HorizontalAlignment="Left" Width="245" Height="193" IsEnabled="true" Click="btn_GoToEvaluation_Click" FontSize="20" Foreground="WhiteSmoke" FontFamily="Arial" FontWeight="Bold">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FE636363"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
        </DockPanel>
        <TextBlock x:Name="txbl_Logo" Height="916" TextWrapping="Wrap" Text="P
                   R
                   E
                   I
                   S
                   W
                   A
                   T
                   T
                   E
                   R
                   A
                   
                   3
                   0
                   0
                   0" Margin="96,43,0,0" FontSize="48" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Courier New" Width="74" FontStyle="Italic" Visibility="Hidden">
            <TextBlock.Effect>
                <DropShadowEffect Color="#FFE0E0E0"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
