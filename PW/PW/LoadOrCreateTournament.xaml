<UserControl x:Class="Preiswattera_3000.LoadOrCreateTournament"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Preiswattera_3000"
             mc:Ignorable="d" 
             d:DesignHeight="760" d:DesignWidth="1130"
             Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="814"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="385"/>
        </Grid.RowDefinitions>
        <Button x:Name="btn_createTournament" Style="{StaticResource LoadOrTurnamentButton}" HorizontalAlignment="Left" Margin="10,10,-306,0" VerticalAlignment="Top" Width="1110" Height="366" FontSize="100" Click="btn_createTournament_Click">
            <Image Source="Icons\createTnmt_Cont.png"/>
        </Button>
        <Button x:Name="btn_loadTournament" Style="{StaticResource LoadOrTurnamentButton}" HorizontalAlignment="Left" Margin="10,381,-306,-364" VerticalAlignment="Top" Width="1110" Height="369" FontSize="100" Click="btn_loadTournament_Click">
            <Image Source="Icons\loadTnmt_Cont.png" Height="403" Width="685"/>
        </Button>
    </Grid>
</UserControl>
