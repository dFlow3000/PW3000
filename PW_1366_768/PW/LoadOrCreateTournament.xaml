<UserControl x:Class="Preiswattera_3000.LoadOrCreateTournament"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Preiswattera_3000"
             mc:Ignorable="d" 
             d:DesignHeight="652" d:DesignWidth="1030"
             Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="814"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="385"/>
        </Grid.RowDefinitions>
        <Button x:Name="btn_createTournament" Style="{StaticResource LoadOrTurnamentButton}" HorizontalAlignment="Left" Margin="10,10,-205,0" VerticalAlignment="Top" Width="1010" Height="322" FontSize="100" Click="btn_createTournament_Click">
            <Image Source="Icons\createTnmt_Cont.png" Height="312" Width="643"/>
        </Button>
        <Button x:Name="btn_loadTournament" Style="{StaticResource LoadOrTurnamentButton}" HorizontalAlignment="Left" Margin="10,332,-205,-256" VerticalAlignment="Top" Width="1010" Height="310" FontSize="100" Click="btn_loadTournament_Click">
            <Image Source="Icons\loadTnmt_Cont.png" Height="356" Width="655"/>
        </Button>
    </Grid>
</UserControl>
